<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='contacts_settings']" position="after">
                    <div id="api_auth">
                        <h2>API Auth Settings</h2>
                        <div class="row mt16 o_settings_container" name="eservice_setting_container">
                            <div class="col-xs-12 col-md-6 o_setting_box" id="expires_delta">
                                <div class="o_setting_right_pane" id="expires_delta">
                                    <div class="o_form_label">
                                        Token Expiration
                                    </div>
                                    <div>
                                        <field name="token_expires_delta" /> Mins 
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6 o_setting_box" id="secret_key">
                                <div class="o_setting_right_pane" id="secret_key">
                                    <div class="o_form_label">
                                        Secret Key
                                    </div>
                                    <div>
                                        <field name="token_secret" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>

</odoo>