<odoo>
    <!-- Add main stock location to company form view -->
    <record id="view_company_form_inherit_add_main_stock_location" model="ir.ui.view">
        <field name="name">res.company.form.inherit.material.requisition.main.stock.location</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_info']" position="inside">
                    <group>
                        <field name="csv_template" readonly="1"  invisible="1"/>
                    </group>
            </xpath>
        </field>
    </record>
</odoo>