<odoo>
    <record id="create_purchase_order_for_mr_form_view" model="ir.ui.view">
        <field name="name">material.requisition.create.purchase.order.form.view</field>
        <field name="model">create.purchase.order.for.material.lines</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="company_id" invisible="1"/>
                    <field name="order_type" invisible="1"/>
                    <field name="picking_type_id" domain="[('code','=','incoming'), '|', ('warehouse_id', '=', False), ('warehouse_id.company_id', '=', company_id)]" options="{'no_create': True}"/>
                    <field name="purchase_agreement_type_id" invisible="order_type != 'purchase_agreement'" required="order_type == 'purchase_agreement'"/>
                    <field name="partner_ids" widget="many2many_tags" options="{'no_create': 1, 'no_edit': 1}" invisible="order_type != 'purchase_order'"/>
                </group>
                <footer>
                    <button name="make_purchase_order" string="Create Purchase Order(s)" type="object" class="btn-primary"
                        invisible="order_type != 'purchase_order'"/>
                    <button name="make_purchase_agreement" string="Create Purchase Agreement" type="object" class="btn-primary"
                        invisible="order_type != 'purchase_agreement'"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>