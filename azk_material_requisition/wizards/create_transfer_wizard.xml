<odoo>
    <record id="create_transfer_for_mr_form_view" model="ir.ui.view">
        <field name="name">material.requisition.create.transfer.form.view</field>
        <field name="model">create.transfer.for.material.lines</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="company_id" invisible="1"/>
                    <field name="picking_type_id" domain="[('code', '=', 'internal'), ('company_id', '=', company_id)]" required="1"/>
                    <field name="destination_location_id" readonly="1"/>
                </group>
                <field name="move_line_ids" nolabel="1">
                    <list create="0" edit="0" editable="bottom">
                        <field name="product_tmpl_id"/>
                        <field name="source_location_id"/>
                        <field name="quantity"/>
                        <field name="product_uom_id"/>
                    </list>
                </field>
                <footer>
                    <button name="make_transfer" string="Create Transfer" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>