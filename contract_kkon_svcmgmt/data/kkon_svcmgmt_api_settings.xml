<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit and extend res.config.settings view -->
        <record model="ir.ui.view" id="res_config_settings_form_view">
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//app[@name='account']" position="inside">
                    <h2>Service Management API</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="api_enabled" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="api_enabled" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="email_notifications" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="email_notifications" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="api_username" />
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="api_username" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="api_password" />
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="api_password" widget="password"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="api_url" />
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="api_url" />
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
