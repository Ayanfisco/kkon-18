<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="account.CustomAccountTypeSelection" t-inherit="web.SelectionField" t-inherit-mode="primary">
        <xpath expr="//select" position="replace">
            <select class="o_input" t-att-id="props.id" t-att-name="props.name" t-on-change="(ev) => this.onChange(ev.target.value)">
                <option/>
                <t t-foreach="hierarchyOptions" t-as="group" t-key="group_index">
                    <optgroup t-att-label="group.name">
                        <t t-if="group.children">
                            <t t-foreach="group.children" t-as="option" t-key="option[0]">
                                <option t-att-value="option[0]" t-att-selected="option[0] === props.value">
                                    <t t-esc="option[1]"/>
                                </option>
                            </t>
                        </t>
                    </optgroup>
                </t>
            </select>
        </xpath>
    </t>
</templates>