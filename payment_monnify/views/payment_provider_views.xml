<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Monnify Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
<!--                <group attrs="{'invisible': [('code', '!=', 'payment_monnify')]}"-->
                <group invisible="code!='payment_monnify'"
                       name="monnify_credentials">
                    <field name="monnify_api_key"
                           string="API Key"
                           required="code == 'payment_monnify' and state!='disabled'"/>
                    <field name="monnify_secret_key"
                       string="Secret Key"
                       required="code == 'payment_monnify' and state != 'disabled'"
                       password="True"/>
                <field name="monnify_contract_code"
                       string="Contract Code"
                       required="code == 'payment_monnify' and state != 'disabled'"
                       password="True"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
